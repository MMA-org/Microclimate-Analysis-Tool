{
  "QMainWindow": {
    "background-color": "#2596be"
  },
  "QLabel": {
    "color": "black",
    "font-size": "16px",
    "background-color": "transparent"
  },
  "QLabel#appName": {
    "color": "white",
    "font-weight": "bold",
    "font-size": "36px",
    "background-color": "transparent"
  },
  "QPushButton": {
    "border": "1px solid black",
    "border-radius": "6px",
    "font-weight": "bold",
    "padding": "2px",
    "font-size": "14px"
  },
  "QLineEdit": {
    "border": "1px solid black",
    "border-radius": "6px",
    "padding": "2px",
    "font-size": "14px"
  },
  "QComboBox": {
    "border": "1px solid black",
    "border-radius": "6px",
    "background-color": "transparent",
    "padding": "2px",
    "font-size": "14px"
  },
  "QRadioButton": {
    "color": "black",
    "padding": "2px",
    "font-size": "16px"
  },
  "#createDataTitleContainer, #segmentTitleContainer, #analysisTitleContainer, #userDataTitleContainer": {
    "border": "2px solid black",
    "background-color": "transparent",
    "border-radius": "12px"
  },
  "#createDataTitleLabel, #segmentTitleLabel, #analysisTitleLabel, #userDataTitleLabel": {
    "color": "black",
    "font-weight": "bold",
    "font-size": "28px"
  },
  "#createDataSubtitleLabel, #segmentSubtitleLabel, #analysisSubtitleLabel, #userDataSubtitleLabel": {
    "color": "#00557f",
    "font-weight": "bold",
    "font-size": "16px"
  },
  "QPushButton:hover": {
    "background-color": "#e0e0e0"
  },
  "QPushButton:pressed": {
    "background-color": "#d0d0d0"
  },
  "#screenContainer": {
    "border": "none",
    "background-color": "white",
    "border-radius": "20px"
  },
  "#sidebarContainer QPushButton, #menuButton": {
    "border": "none",
    "background-color": "transparent",
    "color": "white",
    "font-weight": "bold",
    "font-size": "17px",
    "border-radius": "10px",
    "padding-left": "5px",
    "text-align": "left"
  },
  "#sidebarContainer QPushButton:hover": {
    "background-color": "#ffffff",
    "color": "black"
  },
  "#sidebarContainer QPushButton[active='true']": {
    "background-color": "#ffffff",
    "color": "black"
  },
  "#menuButton:hover": {
    "background-color": "#ffffff",
    "color": "black"
  }
}
